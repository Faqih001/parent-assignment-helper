# Environment Variables Template for HomeworkHelper
# Copy this file to .env and fill in your actual values

# IntaSend Payment Gateway Configuration
# Get these from https://intasend.com/dashboard/
VITE_INTASEND_PUBLISHABLE_KEY=your_intasend_publishable_key_here
INTASEND_SECRET_KEY=your_intasend_secret_key_here
VITE_INTASEND_TEST_MODE=true

# Google Gemini AI Configuration
# Get API key from https://aistudio.google.com/app/apikey
VITE_GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Email Service Configuration (Resend)
# Get API key from https://resend.com/api-keys
# WARNING: Exposing API keys in frontend is not secure for production
# This should be moved to a backend API endpoint
VITE_RESEND_API_KEY=your_resend_api_key_here
RESEND_API_KEY=your_resend_api_key_here

# Support Contact Information
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_SUPPORT_PHONE=+254700000000

# WhatsApp Configuration
VITE_WHATSAPP_NUMBER=254700000000

# Supabase Configuration
# Get these from https://supabase.com/dashboard/
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
VITE_APP_URL=https://parent-assignment-helper.vercel.app

# IntaSend Webhook Configuration (for production)
INTASEND_WEBHOOK_SECRET=your_webhook_secret_here

# Additional Configuration
NODE_ENV=development
